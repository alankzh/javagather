<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <!--使用condition需要引入org.codehaus.janino包-->
    <if condition='isNull("LOG_PATH")'>
        <then>
            <property name="LOG_PATTERN"
                      value="%d{yyyy-MM-dd HH:mm:ss.SSS} [${LOG_LEVEL_PATTERN:-%5p}] [%15.15t] [%15.15X{logger_trace}] [%-40.40logger{39}] : %msg%n%throwable{10}"/>
        </then>
        <else>
            <property name="LOG_PATTERN"
                      value="%d{yyyy-MM-dd HH:mm:ss.SSS} [${LOG_LEVEL_PATTERN:-%5p}] [%15.15t] [%15.15X{logger_trace}] [%-40.40logger{39}] : %msg%n%throwable{10}"/>
        </else>
    </if>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <if condition='isNull("LOG_PATH")'>
            <then>
                <file>account-service.log</file>
                <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
                    <fileNamePattern>netty_action.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
                    <maxFileSize>100MB</maxFileSize>
                    <maxHistory>60</maxHistory>
                    <totalSizeCap>5GB</totalSizeCap>
                </rollingPolicy>
                <encoder>
                    <charset>utf-8</charset>
                    <Pattern>${LOG_PATTERN}</Pattern>
                </encoder>
            </then>
            <else>
                <file>${LOG_PATH}/account-service.log</file>
                <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
                    <fileNamePattern>${LOG_PATH}/netty_action.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
                    <maxFileSize>100MB</maxFileSize>
                    <maxHistory>60</maxHistory>
                    <totalSizeCap>5GB</totalSizeCap>
                </rollingPolicy>
                <encoder>
                    <charset>utf-8</charset>
                    <Pattern>${LOG_PATTERN}</Pattern>
                </encoder>
            </else>
        </if>
    </appender>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <charset>utf-8</charset>
            <Pattern>${LOG_PATTERN}</Pattern>
        </encoder>
    </appender>

    <appender name="ASYNC" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>512</queueSize>
        <appender-ref ref="FILE"/>
    </appender>

    <root level="info">
        <if condition='isNull("LOG_PATH")'>
            <then>
                <appender-ref ref="CONSOLE"/>
            </then>
            <else>
                <appender-ref ref="ASYNC"/>
            </else>
        </if>
    </root>
</configuration>